[run]
source = .
omit = 
    */tests/*
    */test_*
    */venv/*
    */htmlcov/*
    */build/*
    */dist/*
    */__pycache__/*
    */.*
    run_tests.py
    verify_tests.py
    consulta_dialog.py
    views/crop_view.py
    ui_*.py

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

[html]
directory = htmlcov

[xml]
output = coverage.xml 